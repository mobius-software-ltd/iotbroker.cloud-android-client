<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9e1e3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_tl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center" >

            <TextView
                android:id="@+id/tbx_tl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:drawableTop="@drawable/ic_tab_tl"
                android:gravity="center"
                android:onClick="tab_tl_click"
                android:text="@string/tab_activity_topics_List"
                android:textColorLink="#949ca1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_sm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tbx_sm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:drawableTop="@drawable/ic_tab_sm"
                android:gravity="center"
                android:onClick="tab_sm_click"
                android:text="@string/tab_activity_send_message"
                android:textColorLink="#949ca1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tbx_ml"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:clickable="true"
                android:drawableTop="@drawable/ic_tab_ml"
                android:gravity="center"
                android:onClick="tab_ml_click"
                android:text="@string/tab_activity_messge_list"
                android:textColorLink="#949ca1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>