<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:minHeight="60dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_TopicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="6"
            android:minWidth="75dp"
            android:textColor="#2d2d2d"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbl_incmomming"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="@drawable/tbx_qos_incomming_border"
                android:minWidth="85dp"  
                android:gravity="center"             
                android:textSize="13sp" />

            <TextView
                android:id="@+id/lblQos"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:background="@drawable/tbx_qos_border"
                android:minWidth="85dp"                
                android:gravity="center"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/messages_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:background="#fff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_messages_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#949ca1"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>